/* pages/product-category/product-category.wxss */

/* 页面容器样式 */
.container {
  display: flex;
  width: 100%;
  height: 100%;
}

/* 左侧分类列表样式 */
.category-list {
  width: 20%;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 分类项样式 */
.category-item {
  padding: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
  cursor: pointer;
}

/* 活跃分类项样式 */
.category-item.active {
  background-color: #ff5722;
  color: #fff;
}

/* 右侧商品列表样式 */
.product-list {
  width: 80%;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 商品项样式 */
.product-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #e0e0e0;
  padding-bottom: 20rpx;
}

/* 商品图片样式 */
.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

/* 商品信息样式 */
.product-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 商品名称样式 */
.product-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 商品价格样式 */
.product-price {
  font-size: 28rpx;
  color: #ff5722;
}
